<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorBackground3"
    tools:context=".MainActivity">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2">

    </androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="4"
            android:background="@color/colorBackground2"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="3dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="5dp"
                >

                <LinearLayout
                    android:id="@+id/btnMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/imageHome"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.8"
                        android:src="@mipmap/home1" >
                    </ImageView>

                    <TextView
                        android:id="@+id/textHome"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.2"
                        android:gravity="center"
                        android:text="新品"
                        android:textColor="@color/colorBackground1" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="3dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:id="@+id/btnMovie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5"
                    >
                    <ImageView
                        android:id="@+id/imageMovie"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.8"
                        android:src="@mipmap/product2"
                        />

                    <TextView
                        android:id="@+id/textMovie"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.2"
                        android:gravity="center"
                        android:text="点菜"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="3dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:id="@+id/btnCinema"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5"
                    >

                    <ImageView
                        android:id="@+id/imageCinema"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.8"
                        android:src="@mipmap/settlement2"/>

                    <TextView
                        android:id="@+id/textCinema"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.2"
                        android:gravity="center"
                        android:text="下单"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="3dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5"
                    android:id="@+id/btnUser"
                    >
                    <ImageView
                        android:id="@+id/imageUser"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.8"
                        android:src="@mipmap/user2"/>

                    <TextView
                        android:id="@+id/textUser"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.2"
                        android:gravity="center"
                        android:text="我的"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

</LinearLayout>